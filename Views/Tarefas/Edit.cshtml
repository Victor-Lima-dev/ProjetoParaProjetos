@model ProjetoParaProjetos.Models.Tarefa

<h2>Editar tarefa</h2>

<form asp-controller="Tarefas" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DataCriacao"></label>
        <input asp-for="DataCriacao" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DataConclusao"></label>
        <input asp-for="DataConclusao" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Concluida"></label>
        <input asp-for="Concluida" class="form-control" />
    </div>
    <input type="hidden" asp-for="TarefaId">

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
