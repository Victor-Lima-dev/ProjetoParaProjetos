@model ProjetoParaProjetos.Models.Tarefa

<h2>Editar tarefa</h2>

<form asp-controller="Tarefas" asp-action="Delete" method="post">
    <div class="form-group">
        <label asp-for="Nome">@Model.Nome</label>
    
    </div>

    <div class="form-group">
        <label asp-for="Descricao">@Model.Descricao</label>
    </div>

    <div class="form-group">
        <label asp-for="DataCriacao">@Model.DataCriacao</label>
  
    </div>

    <div class="form-group">
        <label asp-for="DataConclusao">@Model.DataConclusao</label>

    </div>

    <div class="form-group">
        <label asp-for="Concluida">@Model.Concluida</label>
    </div>
    <input type="hidden" asp-for="TarefaId">
    

    <button type="submit" class="btn btn-primary">Deletar</button>
</form>
