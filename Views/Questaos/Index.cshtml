@model IEnumerable<ProjetoParaProjetos.Models.Questao>

@{
    ViewData["Title"] = "Index";
}

<style>
    .bg-primary {
        background-color: #0099cc !important;
    }

    .btn-primary {
        background-color: #66cc66 !important;
        border-color: #66cc66 !important;
    }

    .text-primary {
        color: #0099cc !important;
    }

    .card {
        width: 45%;
        margin: 10px;
        border: 1px solid #0099cc;
        border-radius: 10px;
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 15px;
    }

    .card-title {
        font-weight: bold;
        font-size: 18px;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 16px;
        margin-bottom: 10px;
    }

    .card-link {
        font-size: 14px;
        margin-right: 10px;
        color: #0099cc;
        text-decoration: none;
    }

    .card-link:hover {
        text-decoration: underline;
    }

</style>

<h1 class="text-center text-primary">Index</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex flex-wrap align-items-stretch justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Enunciado)</h5>
                            <p class="card-text">Resposta correta: @Html.DisplayFor(modelItem => item.RespostaCorreta)</p>
                            <p class="card-text">Alternativas:</p>
                            <ul>
                                @foreach (var item2 in item.Alternativas)
                                {
                                    <li>@item2.Texto</li>
                                }
                            </ul>
                            <a asp-action="Edit" asp-route-id="@item.QuestaoId" class="card-link">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.QuestaoId" class="card-link">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.QuestaoId" class="card-link">Delete</a>
                            <a asp-action="Quiz" asp-route-id="@item.QuestaoId" class="card-link">Quiz</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
